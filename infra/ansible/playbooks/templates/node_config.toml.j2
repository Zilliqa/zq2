# ZQ2 Node Configuration
# Generated for role: {{ role }}
# Network: {{ network_config.name }}

[network]
chain_id = {{ network_config.eth_chain_id }}
network_name = "{{ network_config.name }}"
api_servers = {{ api_servers_json }}
enable_ots_indices = {{ enable_ots_indices | lower }}

{% if genesis_fork %}
[genesis_fork]
{% for key, value in genesis_fork.items() %}
{{ key }} = {{ value | to_json }}
{% endfor %}
{% endif %}

{% if forks %}
[[forks]]
{% for fork in forks %}
{% for key, value in fork.items() %}
{{ key }} = {{ value | to_json }}
{% endfor %}
{% endfor %}
{% endif %}

{% if checkpoint_file %}
[checkpoint]
file = "{{ checkpoint_file }}"
hash = "{{ checkpoint_hash }}"
{% endif %}

[telemetry]
otlp_collector_endpoint = "{{ otlp_collector_endpoint }}"

{% if role == 'validator' %}
[validator]
# Add validator-specific configuration here
{% endif %}

{% if role == 'api' %}
[api]
# Add API-specific configuration here
{% endif %}

{% if role == 'bootstrap' %}
[bootstrap]
# Add bootstrap-specific configuration here
{% endif %} 