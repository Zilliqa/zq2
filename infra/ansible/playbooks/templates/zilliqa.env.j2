# Network configuration
ZQ2_NETWORK_NAME={{ chain_name }}
ZQ2_ETH_CHAIN_ID={{ eth_chain_id }}

# Node configuration
ZQ2_NODE_NAME={{ node_name }}
ZQ2_NODE_ROLE={{ node_role }}
ZQ2_LOG_LEVEL={{ log_level }}

# API configuration
ZQ2_PRIVATE_API={{ private_api }}
ZQ2_PUBLIC_API={{ public_api }}

# Persistence configuration
ZQ2_PERSISTENCE_PATH=/var/lib/zilliqa/persistence
ZQ2_CHECKPOINT_PATH=/var/lib/zilliqa/checkpoint

{% if enable_kms %}
# KMS configuration
ZQ2_KMS_PROJECT_ID={{ kms_project_id }}
ZQ2_KMS_KEY_RING={{ kms_key_ring }}
ZQ2_KMS_KEY_NAME={{ kms_key_name }}
{% endif %}

{% if zq2_metrics_enabled %}
# Metrics configuration
ZQ2_METRICS_ENABLED=true
ZQ2_METRICS_PORT={{ metrics_port }}
{% endif %} 