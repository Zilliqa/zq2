[Unit]
Description=Zilliqa 2.0 Otterscan
After=docker.service
Requires=docker.service

[Service]
Type=simple
User=root
ExecStart=/usr/bin/docker run --rm \
    --name otterscan \
    --network host \
    --volume /var/lib/zilliqa/otterscan:/var/lib/zilliqa/otterscan \
    --volume /etc/zilliqa/otterscan:/etc/zilliqa/otterscan \
    --log-driver json-file \
    --log-opt max-size=100m \
    --log-opt max-file=3 \
    {{ otterscan_image }}
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 